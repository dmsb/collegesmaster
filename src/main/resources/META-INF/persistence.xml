	<persistence-unit name="collegesmasterPU" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/collegesmasterDS</jta-data-source>
		<class>br.com.collegesmaster.model.imp.Institute</class>
		<class>br.com.collegesmaster.model.imp.Course</class>
		<class>br.com.collegesmaster.model.imp.Discipline</class>
		<class>br.com.collegesmaster.model.imp.Localization</class>
		<class>br.com.collegesmaster.model.imp.User</class>
		<class>br.com.collegesmaster.model.imp.GeneralInfo</class>
		<class>br.com.collegesmaster.model.imp.Challenge</class>
		<class>br.com.collegesmaster.model.imp.Question</class>
		<class>br.com.collegesmaster.model.imp.Alternative</class>
		<class>br.com.collegesmaster.model.imp.ChallengeResponse</class>
		<class>br.com.collegesmaster.model.imp.QuestionResponse</class>		
		<class>br.com.collegesmaster.model.imp.Profile</class>
		<class>br.com.collegesmaster.model.imp.Permission</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/collegesmaster?useSSL=true&amp;useTimezone=true&amp;serverTimezone=UTC" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />					
			
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
			<property name="hibernate.transaction.flush_before_completion" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			
		</properties>
	</persistence-unit>	
</persistence>